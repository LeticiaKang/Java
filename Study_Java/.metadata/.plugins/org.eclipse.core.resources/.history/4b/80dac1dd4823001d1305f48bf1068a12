package kr.brain07;
import java.util.*;
public abstract class Polygon {
		
		// 삼각형, 직사각, 정사각, 평행사변, 사다리꼴
		private int height;
		private int top;
		private int width;
		private int area;
		
		public Polygon(int height,int width, int top) {
			this.height = height;
			this.top = top;
			this.width = width;
		}
		
		public Polygon(int height, int width) {
			this.height = height;
			this.width = width;
		}
		
		public void setHeight(int height) {
			this.height = height;
		}
		public int getHeight() {
			return height;
		}
		

		public void setWidth(int top) {
			this.width = width;
		}
		public int Width() {
			return width;
		}
		
		
		public void setTop(int top) {
			this.top = top;
		}
		public int getTop() {
			return top;
		}
		
		public abstract int evaluate();
		


}
