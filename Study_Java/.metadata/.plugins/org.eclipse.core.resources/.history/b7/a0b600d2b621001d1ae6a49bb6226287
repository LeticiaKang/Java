package kr.brain;

public class Calculator {

	// 10 + 20 ; 10, 20은 피연산자, +는 연산자
	private int operand1;
	private int operand2;
	private String operator;
	
	// Constructor : 객체 초기화
	public Calculator() { //기본(dedfault) 생성자
		this.operand1 = 10;		
		this.operand2 = 20;		
		this.operator = "+";		
	}
	
	public Calculator(int o1, String op, int o2) {
		this.operand1 = o1;
		this.operand2 = o2;
		this.operator = op;
	}
	
	
	
	// custom method
	public int calc(String a, String b) {
		int result = 0;
		
		if (operator.equals("+"))
			result = operand1 + operand2;
		
		else if (operator.equals("-"))
			result = operand1 - operand2;
		
		else if (operator.equals("*"))
			result = operand1 * operand2;
		
		else if (operator.equals("/"))
			result = operand1 / operand2;
		
		return result;
	}
}
