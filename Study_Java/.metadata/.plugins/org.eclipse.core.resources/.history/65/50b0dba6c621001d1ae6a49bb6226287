package kr.brain;

public class ModCalculator extends NewCalculator {
	
//	public ModCalculator() {
		
	public int operand1;
	public int operand2;
	public String operator;
	
	
	public ModCalculator(int o1, String op, int o2) {
		/* this : 클래스로부터 생성된 객체 자신을 가리키는 예약어
		 * 인스턴스 변수나 메소드를 접근할 때 사용함
		 * 변수 : 기억 공간에 대한 식별자 (기본형 / 참조형)
		 * 스코프(scope) : 유효범위
		 *  - 지역변수(private), 인스턴스변수, 클래스변수(static)
		 */
		this.operand1 = o1;
		this.operand2 = o2;
		this.operator = op;
		}

//	}
	
}
