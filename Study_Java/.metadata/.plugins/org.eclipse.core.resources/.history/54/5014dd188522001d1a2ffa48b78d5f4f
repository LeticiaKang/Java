package kr.brain02;

public class Car {
  
	//▶ 2개의 인스턴스 멤버 필드, 4개의 메소드
	String model;       
	private int gas;
	
	// setter, getter Method
	void setGas(int gas) {
		this.gas = gas;
	}
	
	int getGas() {
		return gas;
	}
	
	
	boolean isLesfGas() {
//#1// 		
		boolean isLeft = true;
		if (gas == 0) {
			System.out.print("가스없음\n");
			isLeft = false;
		}
		else 
			System.out.print("가스있음\n");
			
		return isLeft;
	}
	
	void run() {
		while(true) {
			if (gas > 0) {
				System.out.println("달립니다. gas 잔량 (" + gas + ")");
			}else
				System.out.println("멈춥니다. gas 잔량 (" + gas + ")");
				break;
		}
	}
	
}
