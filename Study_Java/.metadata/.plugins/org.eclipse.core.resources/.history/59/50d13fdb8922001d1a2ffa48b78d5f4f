package kr.brain02;
//▶ 책 페이지 : 256
public class Car {
  
	//▶ 2개의 인스턴스 멤버 필드, 4개의 인터페이스 메소드
	String model;       //▶ field
	private int gas;   //▶ field
	
	// setter, getter Method
	//▶ Method "setGet"
	void setGas(String gasString) {
		
		// Sting 타입의 gas를 입력 받아서 L,l을 떼고 정수로 반환함
		int gas =  Integer.parseInt(gasString.replace("L", "").replace("l", ""));
//		int gas;
		
		// 가스를 0과 60사이 주입하면 반환 , 가스를 60이상이면 경고문
		if (gas >= 0 & gas <= 60) {
			this.gas = gas;
		}
		else if(gas > 60) {
			System.out.println("최대 양은 60L입니다.");
			gas = 60;
		}
	}
	
	//▶Method "getGas"
	int getGas() {
		return gas;
	}
	
	//▶ Method "isLeftGas"	
	boolean isLeftGas() {
		boolean isLeft = true;
		
		if (gas == 0) {
			System.out.print("가스없음\n");
			isLeft = false;
		}
		else 
			System.out.print("가스있음\n");
		return isLeft;
	}

	//▶ Method "run"
	void run() {
		while(isLeftGas()) {
			if (gas > 0) {
				System.out.println("달립니다. gas 잔량 (" + gas + ")");
				gas--;
			}else
				System.out.println("멈춥니다. gas 잔량 (" + gas + ")");
				// true일 때 -> break;
		}
	}
}
