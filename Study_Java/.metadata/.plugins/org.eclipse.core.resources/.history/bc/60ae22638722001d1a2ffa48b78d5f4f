package kr.brain02;
//▶ 책 페이지 : 256
public class Car {
  
	//▶ 2개의 인스턴스 멤버 필드, 4개의 인터페이스 메소드
	String model;       //▶ field
	private int gas;   //▶ field
	
	// setter, getter Method
	void setGas(int gas) {
		this.gas = gas;
		if (gas > 60) 
			System.out.println("최대 양은 60L입니다.");

	}
	
	//▶Method "getGas"
	int getGas() {
		return gas;
	}
	
	//▶ Method "isLeftGas"	
	boolean isLeftGas() {
		boolean isLeft = true;
		
		if (gas == 0) {
			System.out.print("가스없음\n");
			isLeft = false;
		}
		else 
			System.out.print("가스있음\n");
		return isLeft;
	}

	//▶ Method "run"
	void run() {
		while(isLeftGas()) {
			if (gas > 0) {
				System.out.println("달립니다. gas 잔량 (" + gas + ")");
			}else
				System.out.println("멈춥니다. gas 잔량 (" + gas + ")");
				// true일 때 -> break;
		}
	}
}
