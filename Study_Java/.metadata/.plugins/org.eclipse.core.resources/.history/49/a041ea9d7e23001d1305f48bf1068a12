package kr.brain07;

import java.util.*;

public class BinaryNumber {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		System.out.println("ÀÔ·Â : ");
		int number = Integer.parseInt(sc.nextLine()); 
		
		int binLen = 0;
		boolean stop = true;
		
		while(stop) {
			if (number >=  (int) Math.pow(2, binLen) & number < (int) Math.pow(2, binLen+1)) {
				stop = false;}
			else;{
				binLen++;}
		
		}

		int[] binArr = new int[binLen+1];//10
		int num = number; int share = 1; int rest = 1;
		while(share != 0) {
			for (int x = binLen-1; x >= 0; x--) {
				share = (int) (num / 2);
				rest = num % 2;
//				System.out.printf("num : %d, share : %d, rest : %d\n", number, share, rest);
				num = share;
				binArr[x] = rest;
//				System.out.println(binArr[x]);
				
			}
		}
		
		for (int a = 0; a < binLen ; a++) {
			System.out.println("ÀÎµ¦½º " + a  + " : " +  binArr[a]);
		}
		
		String binaryNumber = "";
		
		for (int y = 0; y < binLen ; y++) {
			binaryNumber += binArr[y] + "";
			if (y % 4 == 0 & y >= 0)
				binaryNumber = binaryNumber + "_" + binArr[y];
//			else;{
//				binaryNumber += "_" + binArr[y];}
		}
		
		System.out.println(binaryNumber);
		
	}
}
