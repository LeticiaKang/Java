package kr.brain;

class CalculatorExample {

	public static void main(String[] args) {
		// 기본 생성자(매개변수가 없는)를 호출하여 객체 생성
		/* 맨 앞 Calculator는 Class이름
		 * 뒤에 있는 건 매서드
		 */
		
		
		NewCalculator calculator = new NewCalculator();
		System.out.println( calculator.calc() );
		
		calculator = new NewCalculator(23, "*", 40);
		System.out.println( calculator.calc() );
		
	}
}

class NewCalculator {

	// 10 + 20 ; 10, 20은 피연산자, +는 연산자
	private int operand1;
	private int operand2;
	private String operator;
	
	// Constructor : 객체 초기화
	public NewCalculator() { //기본(dedfault) 생성자
		this.operand1 = 10;		
		this.operand2 = 20;		
		this.operator = "+";		
	}
	
	public NewCalculator(int o1, String op, int o2) {
		this.operand1 = o1;
		this.operand2 = o2;
		this.operator = op;
	}
	
	// custom method
	public int calc() {
		int result = 0;
		
		if (operator.equals("+"))
			result = operand1 + operand2;
		
		else if (operator.equals("-"))
			result = operand1 - operand2;
		
		else if (operator.equals("*"))
			result = operand1 * operand2;
		
		else if (operator.equals("/"))
			result = operand1 / operand2;
		
		return result;
		
		
	}
}
